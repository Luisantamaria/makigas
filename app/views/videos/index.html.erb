<% content_for :hero do %>
  <h1><%= t('.title') %></h1>
<% end %>

<div class="row grid-table">
  <% @videos.each do |v| %>
    <div class="col-xs-6 col-sm-4 col-lg-3">
      <%= link_to playlist_video_path(v, playlist_id: v.playlist) do %>
      <div class="video panel panel-default">
        <span class="badge"><%= running_time(v.duration) %></span>
        <%= image_tag v.thumbnail.url(:md), srcset: "#{v.thumbnail.url(:hd)} 2x" %>
        <div class="panel-heading">
          <h3 class="panel-title"><%= v.title %></h3>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</div>